<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BMI" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/theme</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- TextView Scale-->
    <style name="TextAppearance" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:textColor">#B3FFFFFF</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
    </style>

    <!--LinearProgressIndicator-->
    <style name="ProgressAppearance" parent="@style/Widget.MaterialComponents.LinearProgressIndicator">
        <item name="android:indeterminate">false</item>
        <item name="indicatorColor">#F3FFFFFF</item>
        <item name="trackThickness">48dp</item>
    </style>

    <!-- Custom AlertDialog Dark -->
    <style name="AlertDialogAppearance" parent="Theme.MaterialComponents.Dialog.Alert">
        <!--Buttons-->
        <item name="colorPrimary">@color/theme</item>
        <!--Background-->
        <item name="android:background">@color/dialog_background</item>
    </style>

    <!-- shapeAppearance -->
    <style name="roundedAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- MaterialButton -->
    <style name="ButtonAppearance" parent="@style/Widget.MaterialComponents.Button">
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnSurface">#F4F4F4</item>
    </style>

</resources>